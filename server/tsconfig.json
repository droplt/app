{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [
      "ESNext",
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "../build",
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "es2018",
    "typeRoots": [
      "@types",
      "./node_modules/@types",
    ]
  }
}
